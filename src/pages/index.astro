---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";

import Sponsors from "../components/Sponsors.astro";
/* CODE CLEANUP: Removed unused Button2 import */
import Articles from "../components/Articles.astro";
---

<!-- SEO: Homepage description -->
<MainLayout
  title="Forside"
  description="Stop Spild Af Mad er Danmarks største bevægelse mod madspild. Bliv en del af kampen og lær hvordan du kan gøre en forskel i hverdagen."
>
  <main>
    <!-- ============================================
         HERO SEKTION - "Stop Spild Af Mad"
         Hovedbanner med hero billede og CTA knapper
         ============================================ -->
    <section
      class="grid md:h-screen md:overflow-hidden -mt-16 lg:-mt-19 xl:-mt-23 2xl:-mt-28 md:mb-0"
      x-data="{ scrollY: 0 }"
      @scroll.window="scrollY = window.scrollY"
    >
      <div class="mb-section_buttom grid md:grid-cols-2">
        <div
          class="place-self-left md:h-screen md:overflow-hidden intersect:animate-fade-right intersect-once intersect:animate-duration-1000"
        >
          <!-- PERFORMANCE: Hero image - eager load, optimized dimensions -->
          <img
            src="/img/hero.webp"
            alt="Hånd der holder en pose appelsiner - Stop madspild"
            class="w-full pr-10 md:h-full md:object-cover md:object-top animate-fade-right intersect-once animate-duration-1000 animate-ease-out"
            x-bind:style="`transform: translateY(${scrollY * 0.15}px)`"
            width="461"
            height="731"
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        </div>

        <div
          class="md:pr-20 ml-section_left mr-section_right md:mr-0 md:ml-0 md:flex md:flex-col md:justify-center animate-fade-down intersect-once animate-duration-700"
        >
          <div class="lg:place-self-auto">
            <Heading
              htmlheading="h1"
              size="xlarge"
              font="display"
              weight="light"
            >
              STOP SPILD</Heading
            >
            <div class="flex flex-row">
              <Heading size="xlarge">AF MAD</Heading>
              <!-- CLS: Explicit dimensions prevent layout shift -->
              <img
                src="/img/logo_green.svg"
                alt="Stop Spild Af Mad logo grøn"
                class="h-9 place-self-end ml-10 md:h-10 md:ml-8 md:mb-1"
                width="40"
                height="40"
              />
            </div>
          </div>
          <Text
            size="large"
            weight="light"
            stylingclasses="animate-fade-up intersect-once animate-duration-700 animate-delay-300"
            >Danmarks største bevægelse i mod madspild</Text
          >

          <!-- ANIMATION: CTA buttons slide-up -->
          <div
            class="flex flex-col gap-2 mt-5 animate-fade-up intersect-once animate-duration-700 animate-delay-500"
          >
            <Link href="bliv_aktiv" variant="green">GIV ET BIDRAG </Link>
            <Link href="vores_mission" variant="green-inverted" size="medium"
              >TIPS TIL BEDRE MAD-VANER</Link
            >
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         SPONSORER - "Støttet af" (Grøn baggrund)
         Roterende sponsor logoer
         ============================================ -->
    <Sponsors
      bg="bg-green-100"
      tag="SPONSORER"
      sponsor1="EU"
      sponsor2="NORDISK RÅD"
      sponsor3="MILJØSTYRELSEN"
      sponsor4="TUBORG FONDET"
      sponsor5="GYLDENDAL"
      sponsor6="NORDEA"
    />

    <!-- ============================================
         QUIZ SEKTION - "Quiz dig selv i madspild"
         Gul baggrund med quiz spørgsmål og billede
         ============================================ -->
    <section
      class="container flex flex-col mb-section_buttom mt-section_top gap-5 intersect:animate-fade-right intersect-once intersect:animate-duration-1000 intersect:animate-delay-400"
    >
      <Heading htmlheading="h2" size="medium">QUIZ DIG SELV I MADSPILD</Heading>
      <div
        class="flex flex-col gap-5 -mt-5 md:flex-row md:gap-10 items-stretch"
      >
        <div
          class="bg-(--color-yellow--100) flex flex-row rounded-lg px-5 md:px-10 shadow-lg flex-1 my-5 md:my-0"
        >
          <section
            class="max-w-xs flex flex-col gap-10 place-content-center mx-auto"
          >
            <div class="pt-5 flex flex-col gap-5 md:gap-3">
              <div class="my-3">
                <Text size="medium">SPØRGSMÅL 1</Text>
                <Text weight="light" size="large"
                  >Hvilke af disse mad rester tæller som madspild?</Text
                >
              </div>

              <div class="flex flex-row gap-7">
                <Text size="large">A</Text>
                <Text size="large">Middagsrester og gammel frugt</Text>
              </div>

              <div class="flex flex-row gap-7">
                <Text size="large">B</Text>
                <Text size="large">Osteskorper og kaffegrums </Text>
              </div>

              <div class="flex flex-row gap-7">
                <Text size="large">C</Text>
                <Text size="large"
                  >Alt affald der kommer fra mad er madspild</Text
                >
              </div>
            </div>

            <div class="mb-5">
              <Link variant="black" size="small">Se Svar →</Link>
            </div>
          </section>
        </div>

        <div class="rounded-lg shrink-0 w-auto h-auto md:h-full">
          <!-- PERFORMANCE: Quiz image lazy load -->
          <img
            src="/img/quiz.webp"
            alt="Quiz billede omkring madspild - flere valg og spørgsmål"
            class="rounded-lg object-cover w-auto h-auto md:h-full"
          />
        </div>
      </div>

      <!-- <Link>SE SVAR </Link> md:h-110 lg:h-115 md:max-w-xs -->
    </section>

    <!-- ============================================
         AMBASSADØRER - "Stop Spild Af Mad støtter"
         Orange baggrund med ambassadør navne
         ============================================ -->
    <Sponsors
      bg="bg-orange-100"
      tag="AMBASADØRER"
      sponsor1="CLAUS HOLM"
      sponsor2="JAKOB ELLEMAN-JENSEN"
      sponsor3="PIA OLSEN DYHR"
      sponsor4="ADAM OG JAMES PRICE"
      sponsor5="UFFE ELBÆK"
      sponsor6="TIM VLADIMIR"
    />

    <!-- ============================================
         HVEM ER VI - "Stop Spild Af Mad organisation"
         Om organisationen, historie og partnere
         ============================================ -->
    <section
      class="container flex flex-col gap-8 mb-section_buttom mt-section_top intersect:animate-fade-left intersect-once intersect:animate-duration-1000"
    >
      <Heading htmlheading="h2" size="medium">HVEM ER VI?</Heading>

      <div class="lg:grid lg:grid-cols-2 lg:gap-10">
        <div class="flex flex-col gap-3 md:mb-10 lg:max-w-md lg:mb-0">
          <Text weight="light"
            >Stop Spild Af Mad er en <strong
              ><span style="font-weight: 600;">non-profit</span></strong
            > organisation og forbrugerbevægelse, som kæmper mod madspild. Siden 2008
            har vi medvirket til at bringe massivt fokus på madspild i Danmark, samt
            opnået en lang række resultater i både <strong
              ><span style="font-weight: 600;">Danmark</span></strong
            >, <strong><span style="font-weight: 600;">EU</span></strong>, <strong
              ><span style="font-weight: 600;">Norden</span></strong
            > og <strong><span style="font-weight: 600;">FN</span></strong>.
          </Text>
          <Text weight="light"
            >Stop Spild Af Mad har både nationale og internationale samarbejder.
            Vi bakkes op af over <strong
              ><span style="font-weight: 600;">60.000 danskere</span></strong
            >, samt en lang række toppolitikere og anerkendte madpersonligheder.
            Vi arbejder aktivt med <strong
              ><span style="font-weight: 600;">FN’s verdensmål</span></strong
            > for bæredygtig udvikling: UN Sustainable Development Goal 12.3.</Text
          >
        </div>

        <div class="flex flex-col place-content-between gap-5">
          <!-- PERFORMANCE: Lazy load fruit image -->
          <img
            src="/img/index_frugt.webp"
            alt="Frisk frugt og grøntsager - Stop madspild"
            class=""
            width="full"
            height="400"
            loading="lazy"
            decoding="async"
          />
          <div class="place-self-center">
            <Link href="/wip" variant="orange">LÆS MERE OM OS</Link>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         PARTNERE - "Samarbejdspartnere"
         Gul baggrund med partner logoer
         ============================================ -->
    <Sponsors
      bg="bg-yellow-100"
      tag="PARTNERE"
      sponsor1="REMA 1000"
      sponsor2="ARLA"
      sponsor3="NORDIC GREENS"
      sponsor4="WEFOOD"
      sponsor5="ARLA"
      sponsor6="OBG NORDICA"
    />

    <!-- ============================================
         ARTIKLER OG VIDEOER - "Lær mere om kampen imod madspild"
         Video player og artikeloversigt
         ============================================ -->
    <Articles />

    <!-- ============================================
         PRISER OG ANERKENDELSER
         Præmier og udmærkelser modtaget
         ============================================ -->
    <section
      class="container flex flex-col mb-section_buttom mt-section_top intersect:animate-fade-left intersect-once intersect:animate-duration-1000"
    >
      <div class="flex flex-col gap-3 mb-5">
        <Heading htmlheading="h2" size="medium"
          >PRISER OG ANDERKENDELSER</Heading
        >
        <Text
          weight="lght"
          stylingclasses="intersect:animate-fade-up intersect-once intersect:animate-delay-100"
          >Stop Spild Af Mad og dens stifter Selina Juul har fået en lang række
          priser og anerkendelser, bl.a.:</Text
        >
      </div>

      <Link href="wip" variant="purple">SE FLERE PRISER</Link>

      <!-- PERFORMANCE: Carousel images lazy load -->
      <section class="carousel [scrollbar-width:none] md:mt-5">
        <div class="group">
          <img
            src="/img/pris1.webp"
            alt="Pris 1 - Stop Spild Af Mad anerkendelse"
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="336"
            height="148"
            decoding="async"
          />
          <img
            src="/img/pris2.webp"
            alt="Pris 2 - Stop Spild Af Mad anerkendelse"
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="200"
            height="200"
            decoding="async"
          />
          <img
            src="/img/pris3.webp"
            alt="Pris 3 - Stop Spild Af Mad anerkendelse"
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="200"
            height="200"
            decoding="async"
          />
        </div>

        <div class="group" aria-hidden="true">
          <img
            src="/img/pris1.webp"
            alt=""
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="336"
            height="148"
            decoding="async"
          />
          <img
            src="/img/pris2.webp"
            alt=""
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="200"
            height="200"
            decoding="async"
          />
          <img
            src="/img/pris3.webp"
            alt=""
            class="carousel_img grow-0 shrink-0 basis-5em"
            loading="lazy"
            width="200"
            height="200"
            decoding="async"
          />
        </div>
      </section>
    </section>

    <!-- ============================================
         STATISTIK - "Madspild i tal"
         Lilla baggrund med vigtige nøgletal
         ============================================ -->
    <section
      class="bg-(--color-purple--100) w-full py-5 lg:px-35 shadow-lg intersect:animate-fade-up intersect-once"
    >
      <div
        class="container bg-(--color-purple--100) rounded-lg shadow-lg py-5 lg:py-10"
      >
        <div class="grid grid-cols-2 gap-5 sm:gap-10 md:gap-20 lg:grid-cols-4">
          <div class="flex flex-col text-center">
            <Heading font="sans" size="small">200+</Heading>
            <Text weight="light" size="small"
              >projekter og aktiviteter mod madspild siden 2008</Text
            >
          </div>

          <div class="flex flex-col text-center">
            <Heading font="sans" size="small">7.000+</Heading>
            <Text weight="light" size="small"
              >danske og internationale medieomtaler siden 2008</Text
            >
          </div>

          <div class="flex flex-col text-center">
            <Heading font="sans" size="small">300+</Heading>
            <Text weight="light" size="small"
              >tons overskudsmad videreformidlet til udsatte siden 2011</Text
            >
          </div>

          <div class="flex flex-col text-center">
            <Heading font="sans" size="small">126.000+</Heading>
            <Text weight="light" size="small"
              >følgere på samlede sociale medier</Text
            >
          </div>
        </div>
      </div>
    </section>
  </main>
</MainLayout>

<style>
  .carousel {
    display: flex;
    overflow-x: auto;
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .group {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1em;
    animation: spin 5s infinite linear;
    padding-right: 1em;
  }

  .carousel_img {
    flex: 0 0 5em;
    align-content: center;
    padding: 1em;
  }

  @keyframes spin {
    from {
      translate: 0;
    }
    to {
      translate: -100%;
    }
  }
</style>
