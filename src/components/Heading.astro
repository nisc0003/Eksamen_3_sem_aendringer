---
type HeadingSize = "xlarge" | "large" | "medium" | "small" | "xsmall";
type HeadingWeight = "light" | "medium" | "semibold" | "bold";
type HeadingFont = "display" | "sans" | "sanstight";

// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  font = "display",
  weight = "medium",
  stylingclasses = "",
} = Astro.props as {
  htmlheading?: string;
  size?: HeadingSize;
  font?: HeadingFont;
  weight?: HeadingWeight;
  stylingclasses?: string;
};
const headingMap = {
  h1: "h1",
  h2: "h2",
  h3: "h3",
  h4: "h4",
  h5: "h5",
  h6: "h6",
} as const;

const Htmlheading = headingMap[htmlheading as keyof typeof headingMap] || "h2";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses: Record<HeadingSize, string> = {
  xlarge: "text-[clamp(2rem,8vw,6rem)]",
  large: "text-[2.5rem] md:text-[3rem] lg:text-[4rem]",
  medium: "text-[2.25rem] md:text-[2.5rem] lg:text-[3rem]",
  small: "text-[1.5rem] md:text-[1.75rem] lg:text-[2rem]",
  xsmall: "text-[1.25rem] md:text-[1.375rem] lg:text-[1.5rem]",
};

const weightClasses: Record<HeadingWeight, string> = {
  light: "font-light leading-[1.2]",
  medium: "font-medium leading-[1.15]",
  semibold: "font-semibold leading-[1.1]",
  bold: "font-bold uppercase leading-[1.1] tracking-wide",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses: Record<HeadingFont, string> = {
  display: "font-display",
  sans: "font-sans",
  sanstight: "font-sanstight",
};
---

<Htmlheading
  class:list={[
    stylingclasses,
    sizeClasses[size],
    weightClasses[weight],
    fontClasses[font],
  ]}><slot /></Htmlheading
>
