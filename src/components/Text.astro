---
// Changed: Added type definitions to fix TypeScript errors with prop indexing
type TextSize = "xlarge" | "large" | "medium" | "small";
type TextFont = "display" | "sans";
type TextWeight = "light" | "medium" | "bold";

const {
  size = "medium",
  font = "sans",
  weight = "medium",
  stylingclasses = "",
} = Astro.props as {
  size?: TextSize;
  font?: TextFont;
  weight?: TextWeight;
  stylingclasses?: string;
};

const sizeClasses: Record<TextSize, string> = {
  xlarge: "text-[1.375rem] md:text-[1.5rem] lg:text-[2rem]",
  large: "text-[1.25rem] md:text-[1.375rem] lg:text-[1.5rem]",
  medium: "text-[1rem] md:text-[1.125rem] lg:text-[1.25rem]",
  small: "text-[0.875rem] lg:text-[1rem]",
};

const fontClasses: Record<TextFont, string> = {
  display: "font-display",
  sans: "font-sans",
};

const weightClasses: Record<TextWeight, string> = {
  light: "font-light",
  medium: "font-medium",
  bold: "font-bold",
};
---

<p
  class:list={[
    sizeClasses[size],
    fontClasses[font],
    weightClasses[weight],
    stylingclasses,
  ]}
>
  <slot />
</p>
